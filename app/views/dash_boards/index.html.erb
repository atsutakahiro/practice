<h1 class="text-center mb-4">Dash Boards</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <% if user_signed_in? %>
        <p class="lead text-center"><%= current_user.name %></p>
        <div class="d-grid gap-2">
          <%= link_to "編集", edit_user_registration_path, class: "btn btn-primary btn-block" %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-warning btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

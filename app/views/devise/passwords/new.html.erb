<div class="container">
  <h2 class="h3 mb-3 font-weight-normal"><%= t('devise.shared.links.forgot_your_password')%></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email address', required: true %>
    </div>

    <div class="actions">
  <%= f.submit "#{t('devise.passwords.new.send_me_reset_password_instructions')}", class: 'btn btn-lg btn-primary btn-block' %>
</div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
